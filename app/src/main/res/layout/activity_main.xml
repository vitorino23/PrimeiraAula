<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.vitorcesario.primeiraaula.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/botao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="52dp"
        android:text="@string/label_botao_numero_da_sorte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="@string/label_numero"
        android:textSize="200sp"
        app:layout_constraintEnd_toEndOf="@+id/botao"
        app:layout_constraintStart_toStartOf="@+id/botao"
        app:layout_constraintTop_toBottomOf="@+id/botao" />
</android.support.constraint.ConstraintLayout>
